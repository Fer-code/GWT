<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisContrato">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#010B47"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginLeft="90dp"
            android:textColorHint="@color/design_default_color_background"
            android:textSize="28sp"
            android:hint="@string/Contratos" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="10dp"
            android:onClick="TelaBuscar"
            app:srcCompat="@drawable/lupa" />

    </LinearLayout>

    <include layout="@layout/content_vis_contrato" />

    <ListView
        android:id="@+id/listViewContrato"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/colorGWT"
        app:srcCompat="@drawable/mais" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>